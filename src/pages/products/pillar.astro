---
import MainHead from '@/components/MainHead.astro'
import AppLayout from '@/layouts/App.astro'
import { HomeIcon, ChevronRightIcon } from '@heroicons/react/24/solid'
import { Image } from '@astrojs/image/components'
---

<html lang="en">
  <head>
    <MainHead
      title="Pillar | Mahalaxmi Foundry"
      description="Pillar drilling machine column"
    />
  </head>
  <body>
    <AppLayout>
      <div class="container mx-auto px-4 py-10">
        <ul class="flex space-x-2 items-center font-semibold text-gray-500">
          <li class="flex items-center space-x-2">
            <a href="/" class="text-sky-400 hover:text-sky-500 w-5 h-5">
              <HomeIcon />
            </a>
            <span class="w-4 h-4 flex items-center justify-center">
              <ChevronRightIcon />
            </span>
          </li>
          <li>
            <span>Pillar / Drilling Machine Column</span>
          </li>
        </ul>
      </div>
      <section>
        <div class="container mx-auto px-4">
          <h1 class="text-4xl md:text-5xl text-black font-bold">
            Pillar / Drilling Machine Column
          </h1>
        </div>
      </section>
      <div class="container mx-auto">
        <div
          class="grid-cols-3 p-20 space-y-2 lg:space-y-0 lg:grid lg:gap-3 lg:grid-rows-3"
        >
          <div class="w-full rounded min-w-">
            <Image
              src="/assets/coupling-1.jpg"
              alt="image"
              width={400}
              height={400}
              aspectRatio={16 / 9}
            />
          </div>
          <div class="w-full col-span-2 row-span-2 rounded">
            <Image
              src="https://images.unsplash.com/photo-1523275335684-37898b6baf30?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=989&q=80"
              alt="image"
              width={400}
              height={400}
              aspectRatio={16 / 9}
            />
          </div>
          <div class="w-full rounded">
            <Image
              src="https://images.unsplash.com/photo-1523275335684-37898b6baf30?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=989&q=80"
              alt="image"
              width={400}
              height={400}
              aspectRatio={16 / 9}
            />
          </div>
          <div class="w-full rounded">
            <Image
              src="https://images.unsplash.com/photo-1523275335684-37898b6baf30?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=989&q=80"
              alt="image"
              width={400}
              height={400}
              aspectRatio={16 / 9}
            />
          </div>
          <div class="w-full rounded">
            <Image
              src="https://images.unsplash.com/photo-1523275335684-37898b6baf30?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=989&q=80"
              alt="image"
              width={400}
              height={400}
              aspectRatio={16 / 9}
            />
          </div>
          <div class="w-full rounded">
            <Image
              src="https://images.unsplash.com/photo-1523275335684-37898b6baf30?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=989&q=80"
              alt="image"
              width={400}
              height={400}
              aspectRatio={16 / 9}
