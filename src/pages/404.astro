---
import MainHead from '@/components/MainHead.astro'
import Layout from '@/layouts/app.astro'
---

<html lang="en">
  <head>
    <MainHead title="Not Found" />
  </head>
  <body>
    <Layout>
      <div class="container mx-auto px-4 h-64 w-full">
        <div class="flex items-center justify-center flex-col w-full h-full">
          <h1
            class="text-4xl lg:text-5xl text-black font-bold text-center mb-8"
          >
            Oops! Page Not Found
          </h1>
          <a
            href="/"
            class="bg-blue-400 px-4 py-2 font-bold text-base text-white rounded shadow-lg"
            >Go to home
          </a>
        </div>
      </div>
    </Layout>
  </body>
</html>
